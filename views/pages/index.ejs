<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('../layout/head')%>
    <!-- <link rel="stylesheet" href="styles/modules.css"> -->
</head>

<body>


    <header>
        <%- include('../layout/header')%> 
    </header>

    <main>
        <section>
            <% books.forEach( book => {%>
            <article>
                <img src="<%= book.image_url %>">
                <h4>Tilte: <span><%= book.title %></span></h4>
                <h3><%= book.author %></h3>
                <p hidden><%= book.description %></p>
                <p hidden><%= book.isbn %></p>
                <p hidden><%= book.bookshelf %></p>
                <a class="bookBtn" href="/books/<%= book.id%>">View Details</a>
            </article>
            <% }) %>
      </section>
    </main>
    <%- include('../layout/footer')%>
</body>

</html>